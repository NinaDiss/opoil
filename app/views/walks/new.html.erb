<div class="container">
  <div class="row justify-content-center mb-4 pb-2">
    <h1 class="padding">On part en balade !</h1>
  </div>
  <div class="row mt-4">
      <div class="col-md-3 offset-2 flex-row flex-nowrap">
      <%= cl_image_tag @dog.picture.key, class: "image-dog", height: 300, width: 300, crop: :fill %>
      </div>
        <div class="col-md-5 flex-row flex-nowrap">
        <ul>
          <h2>Mon toutou</h2>
          <div class="dog-name h4 orange-text"><%= @dog.name %></div>
          <li p><%= @dog.size.capitalize %> <%= @dog.breed %></li p>
          <li><%= @dog.description %></li>
          <div class="price-orange mt-3">
        <div><%= @dog.rate %></div>
        <div class="price-orange-currency">â‚¬/h</div>
        </div>
        </ul>
        </div>
  </div>
  <br>
  <br>
  <div class="row">
    <div class="col-md-8 offset-2">
      <h3 justify-content-left>Choisissez l'horaire de votre balade</h3>
      <%= simple_form_for [@dog, @walk] do |f| %>
        <%= f.input :date_time %>
        <%= f.submit "C'est parti !", class: 'btn btn-primary' %>
      <% end %>
     </div>
  </div>
</div>
