<%# ACCEPT/DENY WALKS %>
<% @my_dog_walks.each do |my_dog_walk| %>
  <% if my_dog_walk.status == "pending" %>
    <div class="new-request container text-center">
      <h2 class="blue-title"><%= my_dog_walk.user.name %> veut promener <%= my_dog_walk.dog.name %></h2>
      <h3 class="font-weight-bold my-5">le <%= I18n.l my_dog_walk.date_time, format: :long, locale: :fr %></h3>
      <div class="container d-flex col-8">
        <%= cl_image_tag my_dog_walk.user.picture.key, height: 200, width: 200, crop: :fill  %>
        <div class="container text-left col-6">
          <p class="font-weight-bold"><%= my_dog_walk.user.name %></p>
          <p><%= my_dog_walk.user.description %></p>
        </div>
      </div>
      <p class="mt-5"><%= my_dog_walk.user.name %> attend impatiemment votre retour !</p>
      <div class="mt-5">
        <%= link_to "Accepter", accept_walk_path(my_dog_walk), method: :patch, class: "btn btn-primary" %>
        <%= link_to "Refuser", deny_walk_path(my_dog_walk), method: :patch %>
      </div>
    </div>
  <% end %>
<% end %>

<%# ONGLET WALKS %>
<h3 class="text-center">Mes promenades</h3>

<div class="container d-flex justify-content-between">
  <% @walks.each do |walk| %>
  <%# Si la date_time est passée %>
    <div class="card-trip">
      <%= cl_image_tag walk.dog.picture.key, crop: :fill %>
      <div class="card-trip-infos">
        <div>
        <%# Nom du chien %>
          <h2><%= walk.dog.name %></h2>
        <%# C'était le ... %>
          <p>C'était le <%= I18n.l walk.date_time, format: :long, locale: :fr %></p>
          <h2 class="card-trip-pricing"><%= walk.price %> €</h2>
        </div>
        <%= cl_image_tag walk.dog.owner.picture.key, class: "avatar", height: 50, width: 50, crop: :fill  %>
      </div>
    </div>
  <% end %>
</div>
